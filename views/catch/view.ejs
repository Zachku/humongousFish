<% if(req.flash('message') && req.flash('message').length > 0) {%> 
	<div id="sessionFlash">
		<%= req.flash('message') %>
	</div>
<% } %>

<%= req.flash('message') %>
<%= req.flash('err') %>
<div id="CatchForm">

	<h1> <%= catch1.id %> </h1>

	<form action="/catch/update/<%=catch1.id%>" class="form" method = 'POST'>
		<div class = "form_row">
			<label class = "form_label" >Weight</label>
			<input class="form_input" type="text" name="weight" value="<%= catch1.weight %>" placeholder="Weight">
		</div>


		<div class = "form_row">
			<label class = "form_label" >Date</label>
			<input class="form_input" type="date" value="<%= catch1.date %>" name="date" placeholder="Date" >
		</div>

		<!-- latitude & longitude -->
		<input type="hidden" name="coordLatitude" id="coordLatitude" 
			<% if(catch1.coordLatitude) {%>
				value="<%= catch1.coordLatitude %>"
			<%}else {%>
				placeholder="Coodrdinate latitude"
		<%}%>> <br>

		<input type="hidden" name="coordLongitude" id="coordLongitude" 
			<% if(catch1.coordLongitude) {%>
				value="<%= catch1.coordLongitude %>"
			<%}else {%>
				placeholder="Coodrdinate Longitude"
			<%}%>> <br>

		<!-- end latitude & longitude -->

		<!--  
		<%if(catch1.lure) { %>
		 lure <%= catch1.lure.id %>
		<% } %>

		<%if(catch1.fish) { %>
		 fisu <%= catch1.fish.id %>
		<% } %>
		-->
		
		<!-- Lure dropdown list -->
		<div class = "form_row">
			<label class = "form_label" >Lure (<a href="/lure/create">Add more</a>) <br></label>
			<select class="form_select" name="lureId">
				<option value="">--Not selected--</option>
				<% for(var i = 0; i < lures.length; i++) { %>
					<option value="<%- lures[i].id %>" 
						<% if(catch1.lure){
							if(catch1.lure.id==lures[i].id){
								%> selected="selected"<% 
							} 
						}%>>
						<%- lures[i].brand %> <%- lures[i].model %>
					</option>
				<% } %>
			</select> 
		</div>

		<!-- Fish dropdown list -->
		<div class = "form_row">
			<label class = "form_label" >Fish <br></label>
			<select class="form_select" name="fishId">
				<option value="">--Not selected--</option>
				<% for(var i = 0; i < fishes.length; i++) { %>
					<option value="<%- fishes[i].id %>" 
						<% if(catch1.fish){
							if(catch1.fish.id==fishes[i].id){
								%> selected="selected"<% 
							} 
						}%>>
						<%- fishes[i].name %>
					</option>
				<% } %>
			</select> 
		</div>

		<!-- Lake dropdown list -->

		<div class = "form_row">
			<input class="form_submit" type='submit' value="Save changes">
		</div>
	</form>
</div>


<div id = "lakeForm">

</div>

<div id="fishForm">
	
</div>

<div id ="mapForm">
	<% if(catch1.coordLongitude && catch1.coordLatitude) { %>
		<div id="mapCanvas" style="width:500px;height:500px;"></div>
	<% } %>
</div>

<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=true"></script>
<script type="text/javascript">
    var loadMap = function() 
    {
        var myOptions = {
          center: { lat: <%- catch1.coordLatitude %>, lng: <%- catch1.coordLongitude %>},
          zoom: 4,
          mapTypeId: google.maps.MapTypeId.ROADMAP
        };
        var map = new google.maps.Map(document.getElementById("mapCanvas"),
            myOptions);
        var myLatLng = new google.maps.LatLng(
        	<%- catch1.coordLatitude %>,
          	<%- catch1.coordLongitude %>);
        var marker = new google.maps.Marker({
	    	position: myLatLng,
	    	map: map,
	    	draggable:true,
	    	title:"Catch"
		});

		google.maps.event.addListener(marker, 'dragend', function() 
		{
		    var latitudeField = document.getElementById("coordLatitude");
			latitudeField.value = marker.getPosition().lat();
			var longitudeField = document.getElementById("coordLongitude");
			longitudeField.value = marker.getPosition().lng();
			document.getElementById("submitCatch").click();
		});
    };
    window.onload= loadMap;
</script>

<input type="button" id="submit" value="Load Data" />
<div id="stage">
</div>
<script type="text/javascript" language="javascript">
   $(document).ready(function() {
      $("#submit").click(function(event){
          $.ajax( {
             url:'/jquery/result.html',
             success:function(data) {
                $('#stage').html(data);
             }
          });
      });
   });
   </script>